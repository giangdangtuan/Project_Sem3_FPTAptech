@{
	Layout = "_Layout";
}

@model X.PagedList.IPagedList<Tip>
@using X.PagedList.Mvc.Core

<!-- Titlebar
================================================== -->
<section id="titlebar">
	<!-- Container -->
	<div class="container">

		<div class="eight columns">
			<h2>Tips uploaded by user</h2>
		</div>

		<div class="eight columns">
			<nav id="breadcrumbs">
				<ul>
					<li>You are here:</li>
					<li><a href="#">Home</a></li>
					<li>Typography</li>
				</ul>
			</nav>
		</div>

	</div>
	<!-- Container / End -->
</section>



<!-- Content
================================================== -->
@foreach (var item in Model)
{
	<div class="container">
		<div class="sixteen columns">

			<p>@item.TipName</p>

			<div class="clearfix"></div>
			<div class="margin-top-10"></div>

			<div class="post-quote">
				<span class="icon"></span>
				<blockquote>
					@item.Description
				</blockquote>
			</div>

			<div class="clearfix"></div>
			<div class="margin-top-10"></div>

		</div>
	</div>
}
<div class="pagination">
	<ul>
		<li class="active">@Html.PagedListPager(Model, page => Url.Action("Tips", new { page = page }))</li>
	</ul>
</div>
</div>
<!-- Wrapper / End -->
