@{
	Layout = "_Layout";
	ViewData["Title"] = "Giỏ hàng";
}
@model IEnumerable<Italy_Recipe_Page.Models.ViewModels.CartItem>
<form asp-action="Checkout" asp-controller="Cart">
<div class="container-fluid py-5">
	<div class="container py-5">
		<div class="table-responsive">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Name</th>
						<th scope="col">Price</th>
						<th scope="col">Total</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
						
						{
							<tr>
								
								<td>
									<p class="mb-0 mt-4">
										<div>
											@item.PackName
										</div>
									</p> 
								</td>
								<td>
									<p class="mb-0 mt-4">$ @item.Pack_Lenght</p>
								</td>
								
								<td>
									<p class="mb-0 mt-4">$ @item.ThanhTien</p>
								</td>
								<td>
									<a asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.PackId" class="btn btn-md rounded-circle bg-light border mt-4">
										<i class="fa fa-times text-danger"></i>
									</a>
								</td>

							</tr>
						}
				</tbody>
			</table>
		</div>
		
		<div class="row g-4 justify-content-end">
			<div class="col-8"></div>
			<div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
				<div class="bg-light rounded">
					<div class="p-4">
						<h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
						<div class="d-flex justify-content-between mb-4">
							<h5 class="mb-0 me-4">Subtotal:</h5>
							<p class="mb-0">$@Model.Sum(p => p.ThanhTien)</p>
						</div>
						
					
					</div>
					<div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
						<h5 class="mb-0 ps-4 me-4">Total</h5>
						<p class="mb-0 pe-4">$@Model.Sum(p => p.ThanhTien)</p>
					</div>

					<input type="submit" name="payment" class="btn border-secondary text-uppercase text-primary w-100 mt-2" value="Thanh toán VNPay">
				</div>
			</div>
		</div>
	</div>
</div>
</form>
<!-- Cart Page End -->